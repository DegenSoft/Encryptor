{
  "name": "encryptor_degensoft",
  "version": "2.0.0",
  "author": "DEGENSOFT",
  "license": "Commercial Use License",
  "description": "Encryptor-DEGENSOFT",
  "icon": "public/img/white.png",
  "private": true,
  "main": "build/electron.js",
  "repository": "https://github.com/DegenSoft/Soft_test_release",
  "dependencies": {
    "@material/web": "1.0.0",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "13.4.0",
    "@testing-library/user-event": "13.5.0",
    "crypto-js": "4.1.1",
    "electron-log": "4.4.8",
    "electron-notarize": "1.2.2",
    "electron-updater": "6.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "electron:start": "electron ./public/electron.js",
    "build:script": "react-scripts build",
    "electron:build": "npm run build:script && electron ./build/electron.js",
    "build:mac": "npm i && npm run build:script && electron-builder --mac",
    "build:win": "npm i && npm run build:script && electron-builder --win",
    "build": "npm i && npm run build:script && export CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder  build --win --mac --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "26.0.0",
    "electron-builder": "24.6.3"
  },
  "build": {
    "appId": "encryptor.degensoft.id",
    "productName": "Encryptor-DEGENSOFT",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "!src"
    ],
    "asar": true,
    "mac": {
      "target": "dmg",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "public/img/white.png",
      "extraResources": [
        "assets/img/white.png"
      ]
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "public/img/black.png",
      "extraResources": [
        "assets/img/white.png"
      ],
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "npmRebuild": false
  }
}
